<div id="super-search-panel">
  <div id="playlist-sidebar-home"> <!-- ← ここだけリネーム -->
    <div class="filter-box p-3 bg-light rounded shadow">
      <h5>🎧 プレイリスト一覧</h5>

      <% playlists.each do |playlist| %>
        <div class="mb-3">
          <strong>
            <%= link_to playlist.name,
                        playlist_path(playlist),
                        class: "text-decoration-none text-dark" %>
          </strong>
          <!-- 曲リストはコメントアウトのままでOK -->
        </div>
      <% end %>
    </div>
  </div>
</div>
