<%= link_to(
  bookmark_path(current_user.bookmarks.find_by(emotion_log_id: emotion_log.id)),
  id: "bookmark-button-emotion-log-#{emotion_log.id}",
  data: {
    action: "click->bookmark-toggle#toggle",               # ← 必須！
    turbo_method: :delete,
    turbo: true
  }
) do %>
  <%= image_tag "3dheart.webp",
    alt: "unbookmark",
    class: 'btn btn-danger btn-sm',
    data: {
      bookmark_toggle_target: "icon",
      toggled: "true",
      bookmarked_url: asset_path("3dheart.webp"),
      unbookmarked_url: asset_path("3dunheart.webp")
    } %>
<% end %>
