<!-- ✅ ヘッダー（ロゴ + ユーザーメニュー） -->
<div class="mobile-header d-flex justify-content-between align-items-center px-3 py-2">
  <%= image_tag "logo1.png", class: "mobile-logo", style: "height:32px;" %>
  <div class="user-menu">
    <%= image_tag current_user.profile_avatar_url, size: "32x32", class: "rounded-circle" %>
  </div>
</div>

<!-- ✅ 「記録する」ボタン（上部中央に固定）-->
<div class="fixed-top w-100 text-center mt-2" style="z-index: 1030;">
  <%= link_to "#", class: "btn btn-primary rounded-pill px-4 py-2 shadow", data: { controller: "record-modal", action: "click->record-modal#open" } do %>
    今日の気持ちを記録する
  <% end %>
</div>

<!-- ✅ 投稿一覧などメインコンテンツ -->
<div class="mobile-content pt-5 pb-5 px-3">
  <%= render partial: "emotion_logs/mobile_list", locals: { logs: @emotion_logs } %>
</div>

<!-- ✅ 下部のメニュー -->
<nav class="mobile-footer fixed-bottom bg-dark text-white d-flex justify-content-around py-2">
  <!-- ホーム -->
  <%= link_to emotion_logs_path, class: "text-center text-white small" do %>
    <i class="bi bi-house fs-4"></i><br>ホーム
  <% end %>

  <!-- おすすめ -->
  <%= link_to "#", onclick: "goToRecommended()", class: "text-center text-white small" do %>
    <i class="bi bi-fire fs-4"></i><br>おすすめ🔥
  <% end %>

  <!-- 検索（モーダル） -->
  <%= link_to "#", class: "text-center text-white small", data: { controller: "search-modal", action: "click->search-modal#open" } do %>
    <i class="bi bi-search fs-4"></i><br>検索
  <% end %>

  <!-- マイページ -->
  <%= link_to my_emotion_logs_path, class: "text-center text-white small" do %>
    <i class="bi bi-person fs-4"></i><br>マイページ
  <% end %>

  <!-- お気に入り -->
  <%= link_to bookmarks_emotion_logs_path, class: "text-center text-white small" do %>
    <i class="bi bi-heart fs-4"></i><br>お気に入り
  <% end %>
</nav>
