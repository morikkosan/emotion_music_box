<div class="modal fade"
     id="mobile-super-search-modal"
     tabindex="-1"
     aria-labelledby="searchModalLabel"
     aria-hidden="true"
     data-controller="mobile-super-search"><!-- ← ① ここ追加 -->
  <div class="modal-dialog modal-fullscreen-sm-down">
    <div class="modal-content mobile-super-search-modal-content">
      <div class="modal-header">
        <h5 class="modal-title w-100 text-center" id="searchModalLabel">検索・フィルター</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>

      <div class="modal-body mobile-super-search-form">
        <%= form_with url: emotion_logs_path,
                      method: :get,
                      data: {
                        turbo_frame: "logs_list_mobile",
                        action: "turbo:submit-start->mobile-super-search#beforeSubmit turbo:submit-end->mobile-super-search#afterSubmit" # ← ② ここ追加
                      } do |f| %>

          <%= hidden_field_tag :view, "mobile" %>

          <div class="mb-3">
            <label class="mobile-form-label">感情で絞り込み</label>
            <%= f.select :emotion, [
              ['選択しない', ''], ['最高', '最高'], ['気分良い', '気分良い'],
              ['いつも通り', 'いつも通り'], ['イライラ', 'イライラ'], ['限界', '限界']
            ], { selected: params[:emotion] }, class: 'mobile-form-select' %>
          </div>

          <div class="mb-3 mobile-form-autocomplete" data-controller="tag-autocomplete">
            <label class="mobile-form-label">ジャンル/タグで絞り込み</label>
            <%= f.text_field :genre,
              placeholder: 'ジャンルを入力',
              class: 'mobile-form-control',
              value: params[:genre],
              autocomplete: 'off',
              data: { tag_autocomplete_target: "input" } %>
            <ul data-tag-autocomplete-target="suggestions" class="list-group mobile-tag-suggestions"></ul>
          </div>

          <div class="mb-3">
            <label class="mobile-form-label">並び替え</label>
            <%= f.select :sort, [
              ['新しい順', 'new'],
              ['お気に入り順', 'likes'],
              ['古い順', 'old'],
              ['コメント多い順', 'comments']
            ], { selected: params[:sort] }, class: 'mobile-form-select' %>
          </div>

          <div class="mb-3">
            <label class="mobile-form-label">期間フィルター</label>
            <%= f.select :period, [
              ['選択しない', ''], ['今日', 'today'], ['今週', 'week'],
              ['今月', 'month'], ['半年', 'halfyear'], ['年間', 'year']
            ], { selected: params[:period] }, class: 'mobile-form-select' %>
          </div>

          <div class="mb-2 text-center">
            <%= link_to "全てリセット",
                        emotion_logs_path(view: "mobile"),
                        class: "btn btn-outline-danger btn-sm me-2 mobile-reset-btn",
                        data: { turbo_frame: "logs_list_mobile" } %>
            <%= f.submit "検索", class: "mobile-super-search-btn", data: { role: "mobile-search-submit" } %> <!-- ← ③ ここ追加 -->
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
