<div class="container-fluid p-0" data-controller="search-music">
  <h1 class="text-center mt-4">
    <i class="bi bi-heart-pulse"></i> Record emotions
  </h1>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @emotion_log,
                    id: "emotion-form",
                    local: true,
                    data: {
                      controller: "submit-handler",
                      action: "submit->submit-handler#submit"
                    } do |form| %>

        <div class="mb-4">
          <%= form.label :date, '日付' %>
          <%= form.date_field :date,
                              class: 'form-control',
                              max: Date.today.to_s %>
        </div>

        <div class="mb-4">
          <%= form.label :emotion, '感情' %>
          <%= form.select :emotion,
                          ['最高', '気分良い', 'いつも通り', 'イライラ', '限界'],
                          {},
                          class: 'form-control' %>
        </div>

        <div class="mb-4">
          <%= form.label :track_name, '選択した曲名' %>
          <%= form.text_field :track_name,
                              id: "selected-track",
                              class: "form-control" %>
          <%= form.hidden_field :music_url %>
        </div>

        <div class="mb-4" data-controller="tag-input">
          <%= label_tag :tag_names, 'ジャンル（最大3つまで）' %>

          <input
            type="text"
            class="form-control"
            data-tag-input-target="input"
            data-action="keydown->tag-input#keydown
                         input->tag-input#filterSuggestions"
            placeholder="タグを入力してEnter"
            autocomplete="off"
            value="<%= @emotion_log.tag_names %>" />

          <div class="mt-2" data-tag-input-target="tags"></div>

          <div
            class="dropdown-menu"
            data-tag-input-target="suggestions"
            style="max-height:150px;overflow-y:auto;">
          </div>

          <%= hidden_field_tag "emotion_log[tag_names]", @emotion_log.tag_names || "",
                id: "hidden-tags",
                data: { "tag-input-target": "hidden" } %>
        </div>

        <div class="mb-4">
          <%= form.label :description, '一言 吐いてみて' %>
          <%= form.text_field :description,
                              class: 'form-control' %>
        </div>

        <div class="d-flex justify-content-center">
          <%= form.submit '記録を更新',
                          class: 'btn btn-primary me-2',
                          data: { "submit-handler-target": "submit" } %>
          <!-- 曲を選び直すボタンは不要なので削除 -->
        </div>

      <% end %>

      <%= link_to '一覧に戻る',
                  root_path,
                  class: 'btn btn-secondary mt-3' %>
    </div>
  </div>
</div>
