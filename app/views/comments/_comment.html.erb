<turbo-frame id="comment_<%= comment.id %>">
  <div class="d-flex justify-content-between align-items-start my-2 p-2 border rounded">

    <!-- 左側：ユーザー名と本文 -->
    <div>
      <strong><%= comment.user.name %></strong>
      <p class="mb-1"><%= comment.body %></p>
    </div>

    <!-- 右側：自分なら編集・削除、それ以外はリアクション -->
    <div class="text-end d-flex flex-column align-items-end ms-3">
      <% if comment.user == current_user %>
        <!-- 編集ボタン -->
        <%= link_to "編集", edit_comment_path(comment),
              class: "btn btn-link btn-sm text-primary mb-1" %>

        <!-- 削除ボタン -->
        <%= button_to comment_path(comment),
              method:  :delete,
              class:   "btn btn-link btn-sm text-danger",
              form:    { data: { turbo_stream: true, turbo_confirm: "削除しますか？" } },
              data:    { disable_with: "削除中…" } do %>
          削除
        <% end %>
      <% else %>
        <% [:sore_na, :yonda].each do |kind| %>
          <%= button_to toggle_reaction_comment_path(comment, kind: kind),
                method: :post,
                class: "btn btn-sm mb-1 #{comment.reacted_by?(current_user, kind) ? 'btn-primary' : 'btn-outline-secondary'}",
                data: { turbo_stream: true } do %>
            <%= kind == :sore_na ? "👍" : "🎉" %> <%= comment.reaction_count(kind) %>
          <% end %>
        <% end %>
      <% end %>
    </div>

  </div>
</turbo-frame>
