<turbo-frame id="comment_<%= @comment.id %>">
  <%= form_with model: @comment,
                url: comment_path(@comment),
                method: :patch,
                local: false,
                data: { turbo_frame: "comment_#{@comment.id}" },
                class: "mb-2" do |f| %>
    <div class="mb-2">
      <%= f.text_area :body, rows: 3, class: "form-control" %>
    </div>
    <div class="d-flex justify-content-end">
      <%= f.submit "更新", class: "btn btn-primary btn-sm me-2" %>
      <%= link_to "キャンセル", emotion_log_path(@comment.emotion_log),
                  data: { turbo_frame: "_top" },
                  class: "btn btn-secondary btn-sm" %>
    </div>
  <% end %>
</turbo-frame>

