<div class="neon-contact-wrapper">
<%= form_with model: @contact, url: contact_path, local: true, data: { turbo: false }, html: { class: "neon-contact-form" } do |f| %>
    <div class="neon-form-group">
      <%= f.label :name, "お名前", class: "neon-label" %>
      <%= f.text_field :name, maxlength: 10, minlength: 2, required: true, class: "neon-input" %>
      <% @contact.errors.full_messages_for(:name).each do |msg| %>
        <div class="neon-error"><%= msg %></div>
      <% end %>
    </div>
    <div class="neon-form-group">
      <%= f.label :email, "メールアドレス", class: "neon-label" %>
      <%= f.email_field :email, maxlength: 100, required: true, class: "neon-input" %>
      <% @contact.errors.full_messages_for(:email).each do |msg| %>
        <div class="neon-error"><%= msg %></div>
      <% end %>
    </div>
    <div class="neon-form-group">
      <%= f.label :message, "お問い合わせ内容", class: "neon-label" %>
      <%= f.text_area :message, minlength: 5, maxlength: 200, required: true, class: "neon-input neon-textarea" %>
      <% @contact.errors.full_messages_for(:message).each do |msg| %>
        <div class="neon-error"><%= msg %></div>
      <% end %>
    </div>
    <div class="neon-form-group text-center">
      <%= f.submit "送信", class: "neon-btn" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "ホームへ戻る", emotion_logs_path, class: "neon-btn neon-btn-back" %>
  </div>
</div>

<style>
.neon-contact-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 48px 0 32px 0;
}

.neon-contact-form {
  background: #181e32;
  border-radius: 18px;
  padding: 32px 22px;
  max-width: 420px;
  width: 100%;
  margin: 0 auto 24px auto;
  box-shadow: 0 0 40px #00f0ff80, 0 2px 8px #222a;
  font-family: 'Segoe UI', 'Arial', sans-serif;
}

.neon-form-group {
  margin-bottom: 24px;
}

.neon-label {
  display: block;
  margin-bottom: 8px;
  color: #9ff9ff;
  font-weight: bold;
  letter-spacing: 0.1em;
  text-shadow: 0 0 7px #00f0ff, 0 0 1px #fff;
}

.neon-input {
  width: 100%;
  padding: 12px 14px;
  background: #232d45;
  color: #fff;
  border: 1.5px solid #34f2ff;
  border-radius: 12px;
  font-size: 1rem;
  outline: none;
  box-shadow: 0 0 0 2px #34f2ff30;
  transition: box-shadow .15s, border-color .15s;
}
.neon-input:focus {
  border-color: #f09cff;
  box-shadow: 0 0 16px #f09cff60, 0 0 2px #fff;
}

.neon-textarea {
  min-height: 120px;
  resize: vertical;
}

.neon-btn {
  padding: 0.9em 2.2em;
  border-radius: 36px;
  background: linear-gradient(90deg, #00f0ff 0%, #f09cff 100%);
  color: #222;
  border: none;
  font-weight: bold;
  font-size: 1.1rem;
  box-shadow: 0 0 15px #00f0ff60;
  cursor: pointer;
  transition: background .2s, box-shadow .18s;
  display: inline-block;
  min-width: 120px;
  text-align: center;
}
.neon-btn:hover {
  background: linear-gradient(90deg, #34f2ff 0%, #e340fa 100%);
  box-shadow: 0 0 25px #f09cff88;
  color: #fff;
}

.neon-error {
  color: #ff70a3;
  font-size: 0.96em;
  margin-top: 4px;
  text-shadow: 0 0 6px #f09cff80;
}

.neon-btn-back {
  background: linear-gradient(90deg, #444cf7 0%, #3ff6ff 100%);
  color: #fff;
  margin-top: 10px;
  min-width: 180px;
  max-width: 240px;
  width: auto;
}
.neon-btn-back:hover {
  background: linear-gradient(90deg, #3ff6ff 0%, #444cf7 100%);
  color: #fff;
}
</style>
