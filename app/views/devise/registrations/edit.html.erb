<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card p-4" style="width: 100%; max-width: 500px;">
    <% if resource.soundcloud_uid.blank? %>
  <div class="alert alert-warning">
    SoundCloudアカウントが連携されていません。連携するには以下のボタンをクリックしてください。
  </div>
  <div class="text-center">
    <%= link_to "SoundCloud連携を行う", user_soundcloud_omniauth_authorize_path, class: "btn btn-info" %>
  </div>
<% end %>  <!-- 🔹 SoundCloud 連携がされていない場合のみ表示 -->
    <h2 class="text-center mb-4">プロフィール編集</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f| %>
      <!-- <%= hidden_field_tag :authenticity_token, form_authenticity_token %> -->
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name %> <span class="text-danger">*</span><br />
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
      </div>

      <div class="form-group">
        <%= f.label :gender %><br />
        <%= f.select :gender, [["未選択", ""], ["男性", "male"], ["女性", "female"], ["その他", "other"]],
                      {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :age %><br />
        <%= f.number_field :age, class: "form-control", min: 0, max: 120, placeholder: "年齢を入力（任意）" %>
      </div>

      <div class="form-group">
        <%= f.label :email %> <span class="text-danger">*</span><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if resource.provider.blank? %>  <%# 🔹 OAuth ユーザーでない場合のみパスワードを表示 %>
        <div class="form-group">
          <%= f.label :password %> <span class="text-danger">*</span> <i>(変更しない場合は空のまま)</i>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %> <span class="text-danger">*</span><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :current_password %> <span class="text-danger">*</span> <i>(変更を保存するには現在のパスワードが必要です)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>
      <% end %>

      <div class="form-group text-center">
        <%= f.submit "更新", class: "btn btn-primary" %>
      </div>
    <% end %>

    <h3 class="text-center mt-3">アカウント削除</h3>
    <p class="text-center text-muted">アカウントを削除すると、すべてのデータが失われます。</p>
    <div class="text-center">
      <%= button_to "アカウント削除", registration_path(resource_name),
                    data: { confirm: "本当に削除しますか？", turbo_confirm: "本当に削除しますか？" },
                    method: :delete, class: "btn btn-danger" %>
    </div>

    <p class="card-text mt-3 text-center">
      <%= link_to 'トップに戻る', emotion_logs_path, class: 'btn btn-secondary btn-sm' %>
    </p>
  </div>
</div>
