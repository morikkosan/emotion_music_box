<% if user_signed_in? %>
  <!-- ✅ フッターメニュー -->
  <nav aria-label="フッターメニュー"
       class="mobile-footer fixed-bottom bg-dark text-white d-flex justify-content-around py-2">
    <%= link_to emotion_logs_path, class: "text-center text-white small" do %>
      <i class="bi bi-house fs-4" aria-hidden="true"></i><br>ホーム
    <% end %>

    <%= link_to "#",
                onclick: "goToRecommended()",
                class: "text-center text-white small" do %>
      <i class="bi bi-fire fs-4" aria-hidden="true"></i><br>おすすめ🔥
    <% end %>

    <%= link_to "#",
                class: "text-center text-white small",
                data: { controller: "mobile-super-search",
                        action: "click->mobile-super-search#open" } do %>
      <i class="bi bi-search fs-4" aria-hidden="true"></i><br>検索
    <% end %>

    <%= link_to my_emotion_logs_path, class: "text-center text-white small" do %>
      <i class="bi bi-person fs-4" aria-hidden="true"></i><br>マイページ
    <% end %>

    <%= link_to bookmarks_emotion_logs_path, class: "text-center text-white small" do %>
      <i class="bi bi-heart fs-4" aria-hidden="true"></i><br>お気に入り
    <% end %>
  </nav>
<% end %>

<%= render "emotion_logs/mobile_super_search" %>
